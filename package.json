{
  "name": "@whyang9701/repopal",
  "version": "1.0.6",
  "description": "repo reader for LLM",
  "homepage": "https://github.com/whyang9701/repopal#readme",
  "bugs": {
    "url": "https://github.com/whyang9701/repopal/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whyang9701/repopal.git"
  },
  "license": "Apache-2.0",
  "author": "whyang9701 <whyang9701@gmail.com>",
  "type": "module",
  "main": "\"\"",
  "bin": {
    "repopal": "build/src/main.js"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "test:ui": "vitest --ui --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:watch": "vitest unit"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "fast-glob": "^3.3.3",
    "simple-git": "^3.28.0",
    "tslib": "~2.8"
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@types/eslint__js": "~8.42",
    "@types/node": "~20",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "@vitest/ui": "^2.1.9",
    "eslint": "~9.17",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "~2.1"
  },
  "engines": {
    "node": ">= 22.11 < 23"
  }
}
